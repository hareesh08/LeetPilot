{
  "manifest_version": 3,
  "name": "LeetPilot",
  "version": "1.0.0",
  "description": "AI-powered code completion and educational hints for LeetCode with BYOK (Bring Your Own Key) privacy",
  "short_name": "LeetPilot",
  "author": "LeetPilot Team",
  "homepage_url": "https://github.com/leetpilot/extension",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "LeetPilot Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content/*", "src/*", "build-info.json"],
      "matches": ["https://leetcode.com/*"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'self'; connect-src 'self' https://api.openai.com https://api.anthropic.com https://generativelanguage.googleapis.com; default-src 'self'"
  },
  
  "minimum_chrome_version": "88"
}